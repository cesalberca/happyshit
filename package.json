  "scripts": {
    "dev": "yarn clean && parcel background.ts",
    "build": "yarn clean && yarn static && parcel build src/background.ts",
    "lint": "tslint -p .",
    "clean": "rm -rf dist",
    "static": "cp -r static/ dist/ && cp -r node_modules/webextension-polyfill/dist/browser-polyfill.js dist/browser-polyfill.js"
  },
  "devDependencies": {
    "@types/node": "10.12.0",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "parcel-bundler": "1.10.3",
    "prettier": "1.14.3",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typescript": "3.1.3",
    "webextension-polyfill-ts": "0.8.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {}
}
