{
  "name": "happyshit",
  "author": "CÃ©sar Alberca",
  "private": true,
  "license": "private",
  "scripts": {
    "dev": "yarn clean && yarn dev:background && yarn dev:popup",
    "dev:background": "parcel watch src/background.ts",
    "dev:popup": "parcel watch src/popup.tsx --public-url='/'",
    "build": "yarn clean && yarn static && yarn build:background && yarn build:popup",
    "build:background": "parcel build src/background.ts",
    "build:popup": "parcel build src/App.tsx --public-url='/'",
    "lint": "prettier --write --config .prettierrc.json src/**/*.ts",
    "lint:ci": "prettier -l --config .prettierrc.json src/**/*.ts",
    "type": "tslint --project tsconfig.json",
    "compile": "tsc --noEmit",
    "clean": "rm -rf dist",
    "static": "cp -r static/ dist/ && cp -r node_modules/webextension-polyfill/dist/browser-polyfill.js dist/browser-polyfill.js",
    "test": "jest --coverage",
    "prepush": "yarn lint:ci && yarn type && yarn compile && yarn test"
  },
  "devDependencies": {
    "@babel/core": "7.1.5",
    "@babel/preset-react": "7.0.0",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.5",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "lint-staged": "8.0.4",
    "parcel-bundler": "1.10.3",
    "prettier": "1.15.1",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typescript": "3.1.6",
    "webextension-polyfill-ts": "0.8.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "dependencies": {
    "react": "16.7.0-alpha.0",
    "react-dom": "16.7.0-alpha.0",
    "tachyons": "4.11.1"
  }
}
